<article>
    <div class="row">
        <h1>Enter a Workout</h1>
    </div>

    {{!-- error message --}}
    <div id="error">
        <div class="alert alert-danger alert-dismissible d-flex align-items-center fade show">
            <i class="bi-exclamation-octagon-fill"></i>
            <strong class="mx-2">Error!</strong>
            <div id="errorText"></div>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </div>

    {{!-- form --}}
    <div class="row">
        <form id="workoutForm">
            {{!-- date of workout --}}
            <p>Select Date of Workout</p>
            <div class="form-check">               
                <input class="form-check-input" type="radio" name="dateRadio" id="todayRadio" checked="checked">
                <label class="form-check-label" for="todayRadio">Today</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="dateRadio" id="pastRadio">
                <label class="form-check-label" for="pastRadio">Past</label>
            </div>
            <label for="dateInput" class="form-lable">Workout Date</label>
            <input type="date" id="dateInput" name="dateInput" class="form-control">

            {{!-- submit button --}}
            <input class="btn btn-danger my-3" type="submit" value="Submit">
        </form>
    </div>
</article>