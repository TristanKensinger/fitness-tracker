<article>
    <div class="row">
        <h1>Enter a Workout</h1>
    </div>
    <div class="row">
        <form id="workoutForm">
            {{!-- date of workout --}}
            <p>Select Date of Workout</p>
            <div class="form-check">               
                <input class="form-check-input" type="radio" name="dateRadio" id="todayRadio" checked="checked">
                <label class="form-check-label" for="todayRadio">Today</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="dateRadio" id="pastRadio">
                <label class="form-check-label" for="pastRadio">Past</label>
            </div>
            <label for="dateInput" class="form-lable">Workout Date</label>
            <input type="text" id="dateInput" name="dateInput" class="form-control">

            {{!-- submit button --}}
            <input class="btn btn-danger my-3" type="submit" value="Submit">
        </form>
    </div>
</article>